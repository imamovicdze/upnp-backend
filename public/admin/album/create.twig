<!DOCTYPE html>
<html lang="en">
{% include 'admin/news/parts/head.twig' %}
<body>
<div class="container-fluid">
    {% include 'admin/news/parts/header.twig' %}
    <div class="container">
        <div class="col-md-7 offset-2">
            <a href="/album/" class="btn btn-light go-back" role="button">Albums</a>
            <div class="card card-outline-secondary NewsForm">
                <div class="card-header">
                    <h3 class="mb-0 headingForm">Kreiraj Album</h3>
                </div>
                <!--card body-->
                <div class="card-body">
                    <form class="form" action="/album/create" method="POST" id="createForm"
                          enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Unesi Naslov</label>
                            <input type="text" class="form-control" name="title">
                        </div>
                        <div class="form-group">
                            <label for="english_title">Unesi Naslov Na Engleskom</label>
                            <input type="text" class="form-control" name="english_title">
                        </div>
                        <div class="form-group">
                            <label for="image">Unesi Sliku</label>
                            <input type="file" class="form-control" name="image"
                                   accept="image/jpeg,image/png,image/jpg">
                        </div>
                        <button type="submit" class="btn btn-success btn-lg float-right" id="btnCreate">Kreiraj</button>
                    </form>
                </div>
                <!--/card-body-->
            </div>
        </div>
    </div>
</div>
</body>
<script src="/public/admin/assets/validation.js"></script>
</html>