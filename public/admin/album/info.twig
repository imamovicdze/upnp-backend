<!DOCTYPE html>
<html lang="en">
{% include 'admin/news/parts/head.twig' %}
<body>
<div class="container-fluid">
    {% include 'admin/news/parts/header.twig' %}
    <div class="container">

        {% if message is defined %}
            <div class="alert alert-success" role="alert">
                <strong>Uporozenje!</strong> {{ message }}
            </div>
        {% endif %}

        <div class="col-md-10 offset-1">
            <a href="/album/" class="btn btn-light go-back" role="button">Albums</a>
            <div class="card card-outline-secondary NewsForm">
                <div class="card-header">
                    <h3 class="mb-0 headingForm">Album Info</h3>
                </div>
                <!--card body-->
                <div class="card-body">
                    <form class="form" action="/album/edit" method="POST" id="createForm" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title"><b>Naslov: </b> {{ album.title }}</label>
                        </div>
                        <div class="form-group">
                            <label for="title"><b>Naslov na Engleskom: </b> {{ album.english_title }}</label>
                        </div>
                        <div class="row mb-2 ">
                            {% for image in album.images %}
                                <div class="col-md-4 my-2">
                                    <div class="thumbnail">
                                        <a href="">
                                            <img src="{{ image.url }}" alt="picture" style="width:100%">
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="admin-buttons">
                            <a href="/album/edit/{{ album.id }}" class="btn btn-primary float-right"
                               role="button">Edit</a>
                        </div>
                    </form>
                </div>
                <!--/card-body-->
            </div>
        </div>
    </div>
</div>
</body>
<script src="/public/admin/assets/validation.js"></script>
</html>