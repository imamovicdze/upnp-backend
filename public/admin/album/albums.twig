<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dashboard</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/public/admin/assets/css/admin-style.css">
    <script src="/public/admin/assets/js/additional-methods.min.js"></script>
    <script src="/public/admin/assets/js/jquery.validate.min.js"></script>
</head>
<body>

<div class="container-fluid">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand" href="#">upnp</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/news/news">News</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/album/albums">Albums</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/news/create">Create News</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/album/create">Create Album</a>
                </li>
            </ul>
            <!-- Links -->
            <div class="navbar-collapse justify-content-end" id="nav-content">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            Welcome admin
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- navbar -->

    <!-- form -->
    <div class="container">
        <div class="col-md-10 offset-1">
            <div class="jumbotron jumbotron headingForm">
                <div class="container">
                    <h1>Albumi</h1>
                    <p>Ovde se nalaze svi albumi sa sajta</p>
                </div>
            </div>
            <!-- form  -->
            <div class="card card-outline-secondary NewsForm">
                <div class="card-header">
                    <h3 class="mb-0 headingForm">Albums</h3>
                </div>
                <!--card body-->
                <div class="card-body">
                    <form class="form" action="#">
                        <div class="row mb-2">
                            {% for album in albums %}
                                <div class="col-md-4 my-2">
                                    <div class="card">
                                        <img class="card-img-top" src="https://i.imgur.com/KOLbQBX.png"
                                             alt="Card image cap">
                                        <div class="card-body">
                                            <h5 class="card-title">{{ album.title }}</h5>
                                            <a href="/album/edit/{{ album.id }}" class="btn btn-primary float-left mr-1"
                                               role="button">Edit</a>
                                            <form action="#" method="post">
                                                <button type="submit" class="btn btn-danger float-left px-3 py-2"
                                                        role="button">Delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="admin-buttons">
                            {#<form action="#" method="post">
                                <button type="submit" class="btn btn-danger float-right" role="button">Delete</button>
                            </form>#}
                        </div>
                    </form>
                </div>
                <!--/card-body-->
            </div>
            <!-- /form -->
        </div>
    </div>
    <!-- end form -->

</div>
</body>
<script src="/public/admin/assets/validation.js"></script>
</html>