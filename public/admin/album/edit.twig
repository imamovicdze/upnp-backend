<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dashboard</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/public/admin/assets/css/admin-style.css">
    <script src="/public/admin/assets/js/additional-methods.min.js"></script>
    <script src="/public/admin/assets/js/jquery.validate.min.js"></script>
</head>
<body>

<div class="container-fluid">
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand" href="#">upnp</a>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/news/news">News</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/album/albums">Albums</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/news/create">Create News</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/album/create">Create Album</a>
                </li>
            </ul>
            <!-- Links -->
            <div class="navbar-collapse justify-content-end" id="nav-content">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                            Welcome admin
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="/logout">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- navbar -->

    <!-- form -->
    <div class="container">
        <div class="col-md-10 offset-1">
            <a href="/album/albums" class="btn btn-light go-back" role="button">Albums</a>
            <!-- form  -->
            <div class="card card-outline-secondary NewsForm">
                <div class="card-header">
                    <h3 class="mb-0 headingForm">{{ album.title }}</h3>
                </div>
                <!--card body-->
                <div class="card-body">
                    <form class="form" action="/album/update/{{ album.id }}" method="POST" id="createForm" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Izmeni Naslov</label>
                            <input type="text" class="form-control" name="title" value="{{ album.title }}">
                            <button type="submit" class="btn btn-success mt-1">Confirm
                            </button>
                        </div>
                    </form>
                    <div class="row">
                        <div class="col-6">
                            <form class="form" action="/album/upload/{{ album.id }}" method="POST" id="createForm"
                                  enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="image">Unesi Sliku</label>
                                    <input type="file" class="form-control" name="image"
                                           accept="image/jpeg,image/png,image/jpg">
                                    <button type="submit" class="btn btn-success mt-1">Confirm
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div class="col-6">
                            <div class="admin-buttons">
                                <form action="#" method="post">
                                    <button type="submit" class="btn btn-danger float-right px-3 py-2"
                                            role="button">Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    </form>
                    <hr>
                    <div class="row mb-2">
                        {% for image in album.images %}
                            <div class="col-md-4 my-2">
                                <div class="thumbnail">
                                    <a href="">
                                        <img src="{{ image.url }}" alt="Fjords" style="width:100%"
                                             class="mb-1">
                                    </a>
                                    <div class="caption text-center">
                                        <form action="/album/image/{{ image.id }}" method="post">
                                            <button type="submit" class="btn btn-danger" role="button">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        <hr>
                    </div>
                    <!--/card-body-->
                </div>
                <!-- /form -->
            </div>
        </div>
        <!-- end form -->

    </div>
</body>
<script src="/public/admin/assets/validation.js"></script>
</html>