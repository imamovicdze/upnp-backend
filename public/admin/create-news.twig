<!DOCTYPE html>
<html lang="en">
    {% include 'admin/parts/head.twig' %}
<body>

<div class="container-fluid">
    {% include 'admin/parts/header.twig' %}
    <!-- navbar -->

    {% if message is defined %}
        <div {{ message ? 'class="alert alert-success"' : 'class="alert alert-danger"' }} role="alert">
            <strong>Uporozenje!</strong> {{ message ? 'Vest je uspesno kreirana' : 'Vest nije uspesno kreirana' }}
        </div>
    {% endif %}

    {% if error_message is defined %}
        <div   class="alert alert-danger"  role="alert">
            <strong>Uporozenje!</strong> {{ error_message }}
        </div>
    {% endif %}

    <!-- form -->
    <div class="container">
        <div class="col-md-7 offset-2">
            <a href="/dashboard" class="btn btn-light go-back" role="button">Go Back</a>
            <!-- form  -->
            <div class="card card-outline-secondary NewsForm">
                <div class="card-header">
                    <h3 class="mb-0 headingForm">Kreiraj Vest</h3>
                </div>
                <!--card body-->
                <div class="card-body">
                    <form class="form" action="/news/create" method="POST" id="createForm" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Unesi Naslov</label>
                            <input type="text" class="form-control" name="title" >
                        </div>
                        <div class="form-group">
                            <label for="content">Unesi Tekst</label>
                            <div class="row mb-1">
                                <div class="col-lg-12">
                                    <textarea rows="9" name="content" id="content" class="form-control"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="category">Izaberi Kategoriju</label>
                            <select  name="category" class="form-control">
                                <option value="projekt">projekt</option>
                                <option value="blog">blog</option>
                                <option value="vest">vest</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="image">Unesi Sliku</label>
                            <input type="file" class="form-control" name="image" accept="image/jpeg,image/png,image/jpg">
                        </div>
                        <div class="form-group">
                            <label for="category">Izaberi Album</label>
                            <select  name="album" class="form-control">
                                {% for album in albums %}
                                <option value="{{ album.id }}">{{ album.title }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="language">Izaberi Jezik</label>
                            <select id="language" name="language" class="form-control">
                                <option value="serbian">serbian</option>
                                <option value="english">english</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success btn-lg float-right" id="btnCreate">Kreiraj</button>
                    </form>
                </div>
                <!--/card-body-->
            </div>
            <!-- /form -->
        </div>
    </div>
    <!-- end form -->

</div>
</body>
    <script src="/public/admin/assets/validation.js"></script>
</html>