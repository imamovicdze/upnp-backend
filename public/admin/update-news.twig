<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dashboard</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/public/admin/admin-style.css">
</head>
<body>

<div class="container-fluid">
    {% include 'admin_front/parts/header.twig' %}
    <!-- navbar -->




    <!-- form -->
    <div class="container">
        <div class="col-md-7 offset-2">
            <a href="/dashboard" class="btn btn-light go-back" role="button">Go Back</a>
            <!-- form  -->
            <div class="card card-outline-secondary NewsForm">
                <div class="card-header">
                    <h3 class="mb-0 headingForm">Izmeni Vest</h3>
                </div>
                <!--card body-->
                <div class="card-body">
                    <form class="form" action="/news/update/{{ news.id }}" method="POST" id="news-form">
                        <div class="form-group">
                            <label for="title">Izmeni Naslov</label>
                            <input type="text" class="form-control" name="title" value="{{ news.title }}">
                        </div>
                        <div class="form-group">
                            <label for="content">Izmeni Tekst</label>
                            <div class="row mb-1">
                                <div class="col-lg-12">
                                    <textarea rows="9" name="content" id="content" class="form-control">{{ news.content }}</textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="category">Izaberi Kategoriju</label>
                            <select  name="category" class="form-control">
                                <option value="projekt"{% if news.category == 'projekat' %} selected="selected" {% endif %}>projekt</option>
                                <option value="blog"{% if news.category == 'blog' %} selected="selected" {% endif %}>blog</option>
                                <option value="vest"{% if news.category == 'vest' %} selected="selected" {% endif %}>vest</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="image">Unesi Sliku</label>
                            <input type="text" class="form-control" name="image" value="{{ news.image }}" >
                        </div>
                        <div class="form-group">
                            <label for="language">Izaberi Jezik</label>
                            <select id="language" name="language" class="form-control">
                                <option value="serbian"{% if news.language == 'serbian' %} selected="selected" {% endif %}>serbian</option>
                                <option value="english"{% if news.language == 'english' %} selected="selected" {% endif %}>english</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-success btn-lg float-right" id="btnCreate">Potvrdi Izmene</button>
                    </form>
                </div>
                <!--/card-body-->
            </div>
            <!-- /form -->
        </div>
    </div>
    <!-- end form -->

</div>

</body>
</html>